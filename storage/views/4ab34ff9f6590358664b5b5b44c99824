    <?php foreach($hospital_list as $key => $hospital): ?>
    <tr id="row<?php echo $key; ?>" onclick="fill_fields('<?php echo $key; ?>','<?php echo $hospital->jobid; ?>','<?php echo $hospital_count; ?>')">
    <td><?php echo $hospital->hname; ?></td>
    </tr>
    <?php endforeach; ?>
    </table>
    </div>
